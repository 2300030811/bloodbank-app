package com.bloodbank.backend.controller;

import com.bloodbank.backend.model.Donor;
import com.bloodbank.backend.repository.DonorRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity; // <-- IMPORT THIS
import org.springframework.web.bind.annotation.*;
import java.util.List;

@RestController
@RequestMapping("/api/donors")
@CrossOrigin("")
public class DonorController {

    @Autowired
    private DonorRepository donorRepository;

    @PostMapping
    public Donor createDonor(@RequestBody Donor donor) {
        return donorRepository.save(donor);
    }

    @GetMapping
    public List<Donor> getAllDonors() {
        return donorRepository.findAll();
    }

    // --- ADD THIS NEW METHOD ---
    // Endpoint to delete a donor by their ID (DELETE /api/donors/{id})
    @DeleteMapping("/{id}")
    public ResponseEntity<?> deleteDonor(@PathVariable Long id) {
        // The @PathVariable annotation grabs the 'id' from the URL
        donorRepository.deleteById(id);
        // Returns a success response with no content
        return ResponseEntity.ok().build();
    }
}